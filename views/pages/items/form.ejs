

<div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">Form</div>
        <div class="panel-body">
          <% include ./../../elements/errors%>
          <div class="row">
            <div class="col-lg-6">
              <form role="form" action="<%= systemConfig.prefixAdmin%>/items/save" method="POST">
                <div class="form-group">
                  <label>Name</label>
                  <input class="form-control" name="name" value="<%= itemEdit.name%>" />
                </div>
  
                <div class="form-group">
                  <label>Ordering</label>
                  <input
                    class="form-control"
                    type="number"
                    name="ordering"
                    value="<%= itemEdit.ordering%>"
                  />
                </div>
  
                <div class="form-group">
                  <label>Status</label>
                  <select name="status" class="form-control">
                    <option value="novalue">Choose Status</option>
                    <option value="active" <%= (itemEdit.status == "active") ? 'selected="selected"' : ''%> >Active</option>
                    <option value="unactive" <%= (itemEdit.status == "unactive") ? 'selected="selected"' : ''%> >UnActive</option>
                  </select>
                </div>
  
                <!-- <div class="form-group">
                                  <label>Content</label>
                                  <textarea class="form-control" name="content" rows="2"  id="content_ck" ></textarea>
                              </div> -->
  
                <input class="form-control" name="id" value="<%= itemEdit.id%>" type="hidden" />
  
                <button type="submit" class="btn btn-primary">Submit</button>
                <a type="button" href="admin123/item/" class="btn btn-default"
                  >Cancel</a
                >
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  